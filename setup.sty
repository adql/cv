%% Setup file for LaTeX export of the CV.

\usepackage{shared}

\usepackage[hscale=0.9, vscale=0.8]{geometry}

% Links setting ( should be set in yaml when moving to Pandoc
% https://github.com/jgm/pandoc/issues/8198 )
\hypersetup{colorlinks=true, urlcolor=url-color}

\usepackage{multicol}
\setlength{\columnsep}{30pt}

%% Styling lists
\newcommand\itemleftmargin{0.5cm}
\usepackage{enumitem}
\setlist{
  noitemsep,
  parsep=0.3em,
}
\setlist[description]{
  leftmargin=\itemleftmargin,
  labelsep=1em,
  font=\rmfamily
}
\setlist[itemize]{
  left=0pt .. \itemleftmargin
}
\setlist[itemize,2]{
  label={},
  topsep=0pt
}

%% Defining colors
\definecolor{subsection-color}{rgb}{0.45,0.45,0.47}

%% Styling the title
\usepackage{titling}
\setlength{\droptitle}{-2.5cm}
\pretitle{\begin{center}\huge\color{section-color}\rmfamily}
\preauthor{}\postauthor{}\predate{}\postdate{}

%% Styling page
\usepackage{fancyhdr}
\pagestyle{fancyplain}
\fancyhf{}
\cfoot{\thepage}
\renewcommand{\headrulewidth}{0pt}

%% Styling headings
\newcommand{\textwithrule}[1]{%
  #1\color{text-color}\hspace{0.3ex}\hrulefill
}
\usepackage{titlesec}
\titleformat{\section}{%
  \rmfamily\itshape\LARGE\color{section-color}
}{}{}{\textwithrule}
\titleformat*{\subsection}{\rmfamily\scshape\large\color{subsection-color}}
\newcommand{\sectionbreak}{%
  \addpenalty{-1000}%
}

\raggedright

\usepackage{pdfpages}
\usepackage{microtype}

\usepackage[shortcuts]{extdash}
