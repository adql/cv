%% Setup file for LaTeX export of the CV.

\usepackage[hscale=0.9, vscale=0.8]{geometry}

\usepackage{multicol}
\setlength{\columnsep}{30pt}

\usepackage{fontspec}
\setmainfont[Ligatures=TeX]{Linux Libertine}
\setsansfont[Ligatures=TeX]{Linux Biolinum}

\renewcommand{\familydefault}{\sfdefault}

%% Styling lists
\newcommand\itemleftmargin{0.5cm}
\usepackage{enumitem}
\setlist{
  noitemsep,
  parsep=0.3em,
}
\setlist[description]{
  leftmargin=\itemleftmargin,
  labelsep=1em,
  font=\rmfamily
}
\setlist[itemize]{
  left=0pt .. \itemleftmargin
}
\setlist[itemize,2]{
  label={},
  topsep=0pt
}

%% Defining colors
\usepackage{xcolor}
\definecolor{text-color}{gray}{0.3}
\definecolor{url-color}{rgb}{0.2,0.3,0.7}
\definecolor{section-color}{rgb}{0.2,0.6,0.1}
\definecolor{subsection-color}{rgb}{0.45,0.45,0.47}

%% Styling the title
\usepackage{titling}
\setlength{\droptitle}{-2.5cm}
\pretitle{\begin{center}\huge\color{section-color}\rmfamily}
\preauthor{}\postauthor{}\predate{}\postdate{}

%% Setting default color and links styling
\color{text-color}
\hypersetup{pdfborder={0 0 0 [1 0]}, colorlinks=true, urlcolor=url-color}

%% Styling page
\usepackage{fancyhdr}
\pagestyle{fancyplain}
\fancyhf{}
\cfoot{\thepage}
\renewcommand{\headrulewidth}{0pt}

%% Styling headings
\usepackage{titlesec}
\titleformat{\section}{%
  \titlerule\vspace{.8ex}
  \rmfamily\itshape\LARGE\color{section-color}
}{}{}{}
\titleformat*{\subsection}{\rmfamily\scshape\large\color{subsection-color}}
\newcommand{\sectionbreak}{%
  \addpenalty{-1000}%
}

\raggedright

