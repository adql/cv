%% Styling lists
\newcommand\itemleftmargin{0.5cm}
\usepackage{enumitem}
\setlist{
  noitemsep,
  parsep=0.3em,
}
\setlist[description]{
  leftmargin=\itemleftmargin,
  labelsep=1em,
  font=\rmfamily
}
\setlist[itemize]{
  left=0pt .. \itemleftmargin
}
\setlist[itemize,2]{
