%% Setup file for LaTeX export of the CV.

\usepackage[hscale=0.75, vscale=0.8]{geometry}

\usepackage{fontspec}
\setmainfont[Ligatures=TeX]{Linux Libertine}
\setsansfont[Ligatures=TeX]{Linux Biolinum}

%% Styling lists
\newcommand\itemleftmargin{5cm}

\usepackage{enumitem}
\setlist{
  noitemsep,
  itemsep=0.5em,
  parsep=0.3em,
  itemsep=0cm
}
\setlist[description]{
  style=nextline,
  align=right,
  labelsep=1.2em,
  leftmargin=5cm,
  font=\color{description-color}
}
\setlist[itemize]{
  label={},
}
\setlist[itemize,1]{
  left=\itemleftmargin .. \itemleftmargin
}
\setlist[itemize,2]{
  left=0.5cm .. 0.5cm
}

%% Defining colors
\usepackage{xcolor}
\definecolor{text-color}{gray}{0.3}
\definecolor{url-color}{rgb}{0.2,0.3,0.7}
\definecolor{section-color}{rgb}{0.2,0.6,0.1}
\definecolor{description-color}{rgb}{0.45,0.45,0.47}

%% Change title color
\usepackage{titling}
\pretitle{\begin{center}\LARGE\color{section-color}}
\preauthor{}\postauthor{}\predate{}\postdate{}

%% Setting default color and links styling
\color{text-color}
\hypersetup{pdfborder={0 0 0 [1 0]}, colorlinks=true, urlcolor=url-color}

%% Styling page
\usepackage{fancyhdr}
\pagestyle{fancyplain}
\fancyhf{}
\cfoot{\thepage}
\renewcommand{\headrulewidth}{0pt}

%% Styling headings
\usepackage{titlesec}
\titleformat{\section}{%
  \titlerule\vspace{.8ex}
  \rmfamily\itshape\Large\color{section-color}
}{}{}{}
\titleformat*{\subsection}{\sffamily\fontseries{b}\selectfont}
\newcommand{\sectionbreak}{%
  \addpenalty{-1000}%
}

\raggedright

